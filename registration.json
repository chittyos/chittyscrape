{
  "name": "chittyscrape",
  "description": "Stateless browser automation service that scrapes portals lacking APIs and returns structured JSON",
  "version": "0.1.0",
  "endpoints": [
    "/health",
    "/api/v1/status",
    "/api/scrape/court-docket",
    "/api/scrape/cook-county-tax",
    "/api/scrape/mr-cooper"
  ],
  "schema": {
    "version": "1.0.0",
    "entities": [
      "ScrapeRequest",
      "ScrapeResult",
      "CourtDocket",
      "PropertyTaxRecord",
      "MortgageAccount"
    ]
  },
  "security": {
    "authentication": "jwt",
    "encryption": "https"
  }
}
